[user]
  name = Fuad Saud
  email = fuadksd@gmail.com
[color]
  ui = always
[alias]
  a  = add --verbose
  br = branch --verbose
  ci = commit --verbose
  co = checkout
  d  = diff
  dc = diff --cached
  f  = fetch --verbose --progress
  ft = fetch --verbose --tags
  fm = pull --verbose
  fr = pull --rebase --verbose
  g  = grep
  l  = log --graph --abbrev-commit
  p  = push --verbose --progress
  r  = rebase --verbose

  ri = rebase --verbose -i HEAD
  rc = rebase --verbose --continue
  ra = rebase --verbose --abort
  s  = status --short --branch
  st = status
  wc = whatchanged --graph --abbrev-commit

  cd = !cd $(git rev-parse --show-toplevel)
  root = rev-parse --show-toplevel

  gh-pages = !git checkout --orphan gh-pages && git rm $(git ls-files) -f
[push]
  default = simple
[format]
  pretty = %C(yellow)%h •%Creset%C(red)%d%Creset %s %Cgreen• %cr by %cn%Creset
[core]
  excludesfile = /Users/fuad/.jarvis/git/ignore
[github]
  user = fuadsaud
[credential]
  helper = osxkeychain
