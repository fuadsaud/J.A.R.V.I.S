[user]
  name = Fuad Saud
  email = fuadfsaud@gmail.com
  signingkey = C89D3162
[alias]
  a  = add --verbose
  ap = add-pattern
  au = update-index --assume-unchanged
  br = branch
  brw = browse
  ci = commit --verbose
  co = checkout
  cof = fz-checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  cry = cherry -v
  current-branch = symbolic-ref HEAD --short
  d  = diff
  dc = diff --cached
  dm = "!git show @ --format=short | head -n 2 | tail -n 1 | cut -d ' ' -f 2,3 | xargs git diff"
  dw = diff --word-diff
  f  = fetch --verbose --progress
  fix = ci --fixup
  fixf = fz-fixup
  fixup = ci --fixup HEAD
  showf = fz-show
  ft = fetch --verbose --tags
  fm = pull --verbose
  fr = pull --rebase --verbose
  frms = fr origin master
  l  = log --graph --abbrev-commit
  la = log --graph --abbrev-commit --all
  m  = merge --verbose
  nau = update-index --no-assume-unchanged
  nu-sha = "!git sha @ | cut -c -7 | tr -d '\n'"
  p  = push --verbose --progress
  pf = p --force-with-lease
  pm = prune-merged
  pod = p origin --delete
  ppr = "!git p && git pr"
  pr = pull-request
  prune-merged = "!git branch --merged | grep -v \\* | grep -v master | xargs -n 1 git branch -d"
  r  = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  rms = rebase master
  rom = rebase origin/master
  rias = rebase -i --autosquash
  redo = ci --amend --no-edit
  root = rev-parse --show-toplevel
  sd = stash drop
  sed  = "!git ls-files | xargs sed -i"
  sha = rev-parse --short
  shaf = fz-sha
  sl = stash list
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  sp = stash pop
  ss = stash show -p
  st  = status --short --branch
  t = tag
  undo = reset HEAD~1
  unstage = reset HEAD
  untracked = ls-files --others --exclude-standard
  wc = whatchanged --graph --abbrev-commit
  wip = ci -m '•••••<[WIP]>•••••'
  gh-pages = !git checkout --orphan gh-pages && git rm $(git ls-files) -f
[color]
  ui = auto
[credential]
	helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
[core]
  excludesfile = ~/.houdini/git/ignore
[diff]
  algorithm = patience
[format]
  pretty = %C(yellow)%h •%Creset%C(red)%d%Creset %s %Cgreen• %cr by %an%Creset
[github]
  user = fuadsaud
[hub]
  protocol = https
[merge]
  defaultToUpstream = true
[push]
  default = current
[url "https://"]
  insteadOf = git://
[gitsh]
  defaultCommand = status -sb
[gpg]
  program = gpg2
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
