[user]
  name = Fuad Saud
  email = fuadksd@gmail.com
[color]
  ui = always
[branch]
  autosetupmerge = always
[alias]
  br = branch --verbose
  ci = commit --verbose
  co = checkout
  d  = diff
  dc = d --cached
  f  = fetch --verbose --tags --progress
  fm = pull --verbose --tags
  fr = fm --rebase
  g  = grep
  p  = push --verbose --tags --progress
  r  = rebase
  ri = rebase -i HEAD
  rc = r --continue
  ra = r --verbose --abort
  s  = status --short --branch
  st = status

  cd = !cd $(git rev-parse --show-toplevel)
  root = rev-parse --show-toplevel

  gh-pages = !git checkout --orphan gh-pages && git rm $(git ls-files) -f

  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %cn)%Creset' --abbrev-commit --date=relative
[push]
  default = simple
[core]
  excludesfile = /Users/fuad/.jarvis/git/ignore
[github]
  user = fuadsaud
[credential]
  helper = osxkeychain
