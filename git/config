[user]
  name = Fuad Saud
  email = fuadfsaud@gmail.com
[alias]
  a  = add --verbose
  au = update-index --assume-unchanged
  br = branch
  ci = commit --verbose
  co = checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  cry = cherry -v
  current-branch = symbolic-ref HEAD --short
  d  = diff
  dc = diff --cached
  dw = diff --word-diff
  f  = fetch --verbose --progress
  fix = commit --fixup HEAD
  fixup = commit --fixup
  fuck-this-shit = "!git ci -am 'Fuck this shit, I am done for today!'; git p;"
  ft = fetch --verbose --tags
  fm = pull --verbose
  fr = pull --rebase --verbose
  l  = log --graph --abbrev-commit
  la = log --graph --abbrev-commit --all
  m  = merge --verbose
  nau = update-index --no-assume-unchanged
  p  = push --verbose --progress --set-upstream
  pr = pull-request
  prune-merged = "!git branch --merged | grep -v \\* | xargs -n 1 git branch -d"
  r  = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  rias = rebase -i --autosquash
  redo = commit --amend --no-edit
  sed  = "!git ls-files | xargs sed -i"
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  sp = stash pop
  st  = status --short --branch
  t = tag
  undo = reset HEAD~1
  unstage = reset HEAD
  untracked = ls-files --others --exclude-standard
  wc = whatchanged --graph --abbrev-commit

  cd = !cd $(git rev-parse --show-toplevel)
  root = rev-parse --show-toplevel

  gh-pages = !git checkout --orphan gh-pages && git rm $(git ls-files) -f
[color]
  ui = auto
[credential]
  helper = osxkeychain
[core]
  excludesfile = /Users/fuad/.jarvis/git/ignore
[diff]
  alogirthm = patience
[format]
  pretty = %C(yellow)%h •%Creset%C(red)%d%Creset %s %Cgreen• %cr by %cn%Creset
[github]
  user = fuadsaud
[hub]
  protocol = https
[merge]
  defaultToUpstream = true
[push]
  default = current
[url "https://"]
  insteadOf = git://
[gitsh]
  defaultCommand = status -sb
