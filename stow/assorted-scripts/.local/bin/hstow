#!/usr/bin/env bash

set -euo pipefail

if greadlink --version &>> /dev/null; then
  readlink_program=greadlink
else
  readlink_program=readlink
fi

current_dir="$(dirname "$("$readlink_program" -f "${BASH_SOURCE[0]}")")"
inferred_ditmas_dir=$("$readlink_program" -f "$current_dir/../../../..")

hostname=${HOSTNAME:-$(hostname)}
ditmas_dir="${DITMAS_DIR:-$inferred_ditmas_dir}"
packages_file="${ditmas_dir}/hosts/${hostname}.d/stow"

if [[ ! -e $packages_file ]]; then
  packages_file="${ditmas_dir}/hosts/base.d/stow"
fi

packages_dir="${ditmas_dir}/stow"

sort "$packages_file" \
  | xargs stow --restow --verbose=2 --dir "${packages_dir}" --target "${HOME}" "$@"
