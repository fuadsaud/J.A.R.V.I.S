[user]
  name = Fuad Saud
  email = fuadfsaud@gmail.com
  signingkey = fuadfsaud@gmail.com
[alias]
  a  = add --verbose
  ap = add-pattern
  au = add --update
  br = branch
  brw = browse
  cb = co -b
  ci = commit --verbose
  cia = ci --all
  cinos = commit --no-gpg-sign
  cim = ci --message
  ciam = ci --all --message
  co = checkout
  cof = fz-checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  cry = cherry -v
  current-branch = symbolic-ref HEAD --short
  d  = diff
  dc = diff --cached
  dm = "!git show @ --format=short | head -n 2 | tail -n 1 | cut -d ' ' -f 2,3 | xargs git diff"
  dw = diff --word-diff
  f  = fetch --verbose --progress
  fix = ci --fixup
  fixf = fz-fixup
  fixup = ci --fixup HEAD
  fuck = "!git add .; git ci -m 'Fuck this shit, I am done for today!'; git p;"
  ft = fetch --verbose --tags
  fr = pull --rebase --verbose
  frm = fr origin master
  gh-pages = !git checkout --orphan gh-pages && git rm $(git ls-files) -f
  l  = log --graph --abbrev-commit
  la = log --graph --abbrev-commit --all
  m  = merge --verbose
  nau = update-index --no-assume-unchanged
  nu-sha = "!git sha @ | cut -c -7 | tr -d '\n'"
  p  = push --verbose --progress
  pf = p --force-with-lease
  pm = prune-merged
  pod = p origin --delete
  pprq = "!git p && hub prq"
  prq = pull-request
  prune-merged = "!git branch --merged master | grep -v \\* | grep -v master | xargs --no-run-if-empty -n 1 git branch -d"
  r  = rebase
  ra = rebase --abort
  rc = rebase --continue
  rh = reset --hard
  resign = r --gpg-sign --no-ff
  ri = rebase -i
  rms = rebase master
  rom = rebase origin/master
  rias = rebase -i --autosquash
  redo = ci --amend --no-edit
  root = rev-parse --show-toplevel
  sd = stash drop
  sed  = "!git ls-files | xargs sed -i"
  sha = rev-parse --short
  shaf = fz-sha
  showf = fz-show
  showm = "!git show @ --format=full | tail -n +2 | head -n 1 | cut -d ':' -f 2 | awk 'BEGIN{FS=" ";OFS="..."} {t1=$1;$1=$2;$2=t1;print}'"
  sl = stash list
  sm = submodule
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  sp = stash pop
  ss = stash show -p
  st  = status --short --branch
  t = tag
  uiau = update-index --assume-unchanged
  undo = reset HEAD~1
  unstage = reset HEAD
  untracked = ls-files --others --exclude-standard
  wc = whatchanged --graph --abbrev-commit
  wip = ci -m '•••••<[WIP]>•••••'
[color]
  ui = auto
[credential]
	helper = osxkeychain
[core]
  excludesfile = ~/.config/git/ignore
[diff]
  algorithm = patience
[format]
  pretty = %C(yellow)%h •%Creset%C(red)%d%Creset %s %Cgreen• %cr by %Creset%C(magenta)%an%Creset %Creset%C(cyan)|%G?|
[github]
  user = fuadsaud
[hub]
  protocol = https
[merge]
  defaultToUpstream = true
[push]
  default = current
[gitsh]
  defaultCommand = status -sb
[gpg]
  program = gpg
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[rebase]
  autoStash = true
[commit]
  gpgsign = true
[pull]
  rebase = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
