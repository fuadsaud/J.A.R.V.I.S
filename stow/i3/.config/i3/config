# Launching keybindings
#
# launch terminal
bindsym $mod+Return exec $TERMINAL

# launch web browser
bindsym $mod+Shift+Return exec $WEB_BROWSER

# launch plain rofi
bindsym $mod+d exec --no-startup-id rofi -show

# launch clipboard menu
bindsym $mod+Shift+v exec --no-startup-id rofi-clipster

# launch dunst test script
bindsym $mod+g exec --no-startup-id ddunst-test

# launch file browser
bindsym $mod+slash exec $TERMINAL -e ranger

# lock screen
bindsym $mod+backslash exec --no-startup-id rofi -show power-menu

# detect appropriate X layout
bindsym $mod+Shift+x exec --no-startup-id autorandr -c

# # #
# Screenshot keybindings
#
# full screen
bindsym --release Print       exec "scrot -m $HOME/Pictures/%s_%H%M_%d.%m.%Y_$wx$h.png"

# selection screenshot
bindsym --release Shift+Print exec "scrot -s $HOME/Pictures/%s_%H%M_%d%m%Y_$wx$h.png"

# window screenshot
bindsym --release Mod1+Print  exec "scrot -u $HOME/Pictures/%s_%H%M_%d%m%Y_$wx$h.png"

# # #
# Media key bindings
#
# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-mute 0 0; pulseaudio-ctl up"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-mute 0 0; pulseaudio-ctl down"
bindsym XF86AudioMute        exec --no-startup-id pulseaudio-ctl mute
bindsym XF86AudioMicMute     exec --no-startup-id pulseaudio-ctl mute-input

# player status control
bindsym XF86AudioPlay        exec --no-startup-id playerctl play-pause
bindsym XF86AudioPrev        exec --no-startup-id playerctl previous
bindsym XF86AudioNext        exec --no-startup-id playerctl next

