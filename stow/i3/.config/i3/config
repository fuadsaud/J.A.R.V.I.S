# # #
# Xorg stuff
#
# make caps lock behave like control
exec_always --no-startup-id setxkbmap -option ctrl:nocaps

# make right alt the compose key
exec_always --no-startup-id setxkbmap -option compose:ralt

# make short-pressed Ctrl behave like Escape
exec_always --no-startup-id xcape -e 'Control_L=Escape'

# enable natural scrolling for all mouse devices and sets up tapping for touchpads.
exec_always --no-startup-id enable-natural-scrolling-and-tapping

