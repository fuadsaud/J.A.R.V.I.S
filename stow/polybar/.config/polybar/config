border-right-colo = ${xrdb:color0}

spacing            = 0
padding-left       = 2
padding-right      = 4
module-margin-left = 0

font-N = <fontconfig pattern>;<vertical offset>
font-0 = Siji:size=8;2
font-1 = scientifica:style=Bold:pixelsize=10;1
font-2 = Space Mono for Powerline:pixelsize=8;1
font-3 = Monospace:pixelsize=9;1

cursor-click = pointer

fixed-center = true

[bar/main]
inherit=base/bar

modules-left    = date battery paddinglite playerctl-prev playerctl-play-pause playerctl-next playerctl-metadata
modules-center  = xwindow
modules-right   = backlight volume essid workspaces

enable-ipc = true

[bar/aux]
inherit=base/bar
