[module/padding]
type               = custom/text
content            = |
content-foreground = ${colors.bg}
content-background = ${colors.bg}

[module/paddinglite]
type               = custom/text
content            = ||
content-foreground = #000f0f0f
content-background = #000f0f0f

[module/network]
type          = internal/network
interface     = wlp2s0
ping-interval = 3

[module/xwindow]
y-offset      = 10
type          = internal/xwindow
format        = <label>
label         = %title:0:50:%
label-padding = 1

[module/date]
type     = internal/date
interval = 1.0
