[module/playerctl-play-pause]
type = custom/ipc

format-background = ${xrdb:color6}
format-foreground = ${xrdb:color0}

hook-0 = echo 
hook-1 = echo 
initial = 1

click-left = playerctl play-pause

[module/playerctl-next]
