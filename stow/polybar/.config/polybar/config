; bars                                      ;
;--------------------------------------------
[base/bar]
monitor = ${env:MONITOR:}

dpi      = 192
width    = 100%
height   = 40
offset-x = 0
offset-y = 0

bottom = true

background = #000f0f0f
foreground = ${xrdb:color7}

