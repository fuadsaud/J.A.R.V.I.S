#!/usr/bin/env bash

source "$XDG_CONFIG_HOME/nu/nuenv"

function connected {
  nu vpn check 2>&1 >>/dev/null
}

if [[ $1 == "status" ]]; then
  if connected; then
    bg=$(xrdb-color 'foreground')
    fg=$(xrdb-color 'color9')

    echo "%{F${fg}}%{B${bg}}  %{B-}%{F-}"
  else
    bg=$(xrdb-color 'foreground')
    fg=$(xrdb-color 'color8')

    echo "%{F${fg}}%{B${bg}}  %{B-}%{F-}"
  fi
elif [[ $1 == "toggle" ]]; then
  if connected; then
    $TERMINAL -e nu vpn disconnect
  else
    $TERMINAL -e nu vpn connect --client openfortivpn
  fi
fi
