# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# Use video title as file name
alias yt="youtube-dl -t"

# cd to given rubygem directory
function gemcd {
  gemfile=$(gem which $@)

  if [ -n gemfile ]; then
    cd $(dirname "$gemfile")
  fi
 }

# Disable autocorrect
unsetopt correct
